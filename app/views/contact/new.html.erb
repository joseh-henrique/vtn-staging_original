<div class="row">
  <div class="col-md-9 col-md-offset-1">
    <div class="big-title">
      Support
    </div>
    <%= render :partial => "contact_tabs" if current_user %>
    <%= simple_form_for @message, :url => contact_path, :html => {:class => 'form-horizontal'}  do |f| %>
      <% if !current_user %>
        <%= f.input :name %>
        <%= f.input :email %>
      <% else %>
        <% @message.email = current_user.email; @message.name = current_user.name %>
        <%= f.input :name, as: :hidden %>
        <%= f.input :email, as: :hidden %>
      <% end %>
      <%= f.input :subject %>
      <%= f.input :body, as: :text, input_html: {:rows => 4 } %>
      <div class="row">
        <div class="col-md-10 col-md-offset-2">
          For phone support call: (925) 289-8746
        </div>
      </div>
      <div>
        <%= tb_submit_button(title: "Send") %>
      </div>
    <% end %>
  </div>
</div>
